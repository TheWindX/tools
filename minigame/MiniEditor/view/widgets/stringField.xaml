<UserControl x:Class="MiniEditor.stringField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniEditor"
             mc:Ignorable="d" 
             d:DesignHeight="37" d:DesignWidth="316">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="m_label" Margin="5,7,0,7" TextWrapping="Wrap" Text="path" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Foreground="White" Height="23"/>
        <TextBox x:Name="m_value" Grid.Column="1" Margin="5,0" TextWrapping="Wrap" Text="Audio/test.ac" Background="Black" Foreground="White" Height="22" BorderThickness="1" Grid.ColumnSpan="2" FontSize="14" AcceptsReturn="True"/>
        <Button x:Name="m_choose" Grid.Column="0" Margin="5,0" Background="Black" Foreground="White" Width="22" Height="22" BorderThickness="1" Grid.ColumnSpan="1" FontSize="14" HorizontalAlignment="Right" Content="..." Visibility="Hidden" Click="m_choose_Click"/>
    </Grid>
</UserControl>
