<UserControl x:Class="MiniEditor.ComponentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniEditor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle RadiusX="5" RadiusY="5" StrokeThickness="5" Stroke="#FF212121"></Rectangle>
        <StackPanel>
            <Grid x:Name="mHead" Height="20">
                <Rectangle Stroke="{StaticResource BorderColorBrush}"/>
                <CheckBox x:Name="mName" Content="com name" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Foreground="#FFD6D6D6" IsChecked="True" IsEnabled="False"/>
                <Button Width="20" HorizontalAlignment="Right" Margin="0,0,0,0" Content="..." Click="Button_Click"></Button>
            </Grid>
            <StackPanel x:Name="mProps">
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
