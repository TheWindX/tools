<UserControl x:Class="MiniEditor.DiscriptionCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniEditor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="250" HorizontalAlignment="Center" Margin="5">
    <Grid>
        <Border BorderBrush="{StaticResource BorderColorBrush}" CornerRadius="5" BorderThickness="1" Margin="-5"></Border>
        <TextBlock x:Name="mContent" Text="" FontSize="16" Foreground="#FF9C9C9C" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
