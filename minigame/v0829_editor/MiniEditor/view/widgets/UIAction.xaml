<UserControl x:Class="MiniEditor.UIAction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniEditor"
             mc:Ignorable="d" 
             
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="m_label" Margin="5,7,0,7" TextWrapping="Wrap" Text="action" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Foreground="White" Height="23"/>
        <Button x:Name="m_value" Content="push me" Grid.Column="1" Margin="5,0" Height="22" BorderThickness="1" Grid.ColumnSpan="2" FontSize="14" />
    </Grid>
</UserControl>
