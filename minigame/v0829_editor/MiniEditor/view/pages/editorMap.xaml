<UserControl x:Class="MiniEditor.editorMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniEditor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid ClipToBounds="True" SizeChanged="Grid_SizeChanged" Background="#0C000000" MouseWheel="Grid_MouseWheel" MouseMove="Grid_MouseMove">
        <Canvas x:Name="mCanvas" >
            <Rectangle Width="500" Height="500" Stroke="#FFB6B6B6" Canvas.Left="-250" Canvas.Top="-250"/>
        </Canvas>
    </Grid>
</UserControl>
