<UserControl x:Class="MiniEditor.listItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniEditor"
             mc:Ignorable="d" 
             d:DesignHeight="18.578" d:DesignWidth="300">
    <Grid>
        <Rectangle x:Name="mBG" Fill="#FF060606"></Rectangle>
        <WrapPanel>
            <TextBlock x:Name="mExpand" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0" Background="#19000000" Width="16" HorizontalAlignment="Center">+</TextBlock>
            <TextBlock x:Name="mName" Background="#19000000" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="16" FontStyle="Italic">root objects</TextBlock>
        </WrapPanel>
    </Grid>
</UserControl>
